.container
	%header.header
		.header_icon
			- if !current_page?(root_path)
				= link_to new_post_path do
					= image_tag 'photo-camera.svg', class: 'header_back'
	- @posts.each do |post|
		= link_to post_path(post) do
			.post
				.post_detail
					= image_tag current_user.avatar_image
					%div
						%p= current_user.account
						-# %p= post.display_created_at
				.post_content
					- if user_signed_in?
						.post_like.hidden.active-like
							= image_tag 'like-active.svg'
						.post_like.hidden.inactive-like
							= image_tag 'like.svg'
						.post_title
							%p= post.title
							%p= post.content
	-# = link_to new_post_path do
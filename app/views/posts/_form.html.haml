			%li= message
	= form_with(model: post, local: true) do |f|
		-# %div
		-# 	= f.label :eyecatch, 'アイキャッチ'
		-# %div
		-# 	= f.file_field :eyecatch
		%div
			= f.label :title, 'Title'

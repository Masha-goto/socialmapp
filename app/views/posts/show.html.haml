.container
	%header.header
		.header_icon
			- if !current_page?(root_path)
				= link_to new_post_path do
					= image_tag 'photo-camera.svg', class: 'header_back'
		.post
			.post_detail
				= image_tag current_user.avatar_image
				%div
					.post_name
						= current_user.account
					%p= time_ago_in_words(@post.created_at)
			.post_content
				- if @post.images.attached?
					- @post.images.each do |image|
						.post_image
							= image_tag(image)
			.post_content_item
				- if user_signed_in?
					.post_like.hidden.active-like
						= image_tag 'like-active.svg'
					.post_like.hidden.inactive-like
						= image_tag 'like.svg'
					.post_group
						= image_tag 'Group.svg'
					.post_share
						= link_to (image_tag 'share.svg'), 'https://twitter.com/i/flow/login'
			.post_title
				%p= @post.title
				%p= @post.content
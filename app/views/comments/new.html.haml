.container
	%ul
		- @comment.errors.full_messages.each do |message|
			%li= message

	= form_with(model: @comment, url: post_comments_path(@comment.post), local: true) do |f|
		%div
			= f.label :content, '', class: 'text'
		%div
			= f.text_area :content, class: 'text'

		= f.submit 'preservation', class: 'btn-primary'